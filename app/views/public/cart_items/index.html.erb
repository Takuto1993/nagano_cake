<h1>ショッピングカート</h1>

  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
        <th colspan="5"></th>
      </tr>
    </thead>
    <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <% if item.image.attached? %>
           <%= image_tag item.image,size: "200x200" %>
          <% else %>
           <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
          <%= item.name %>
        </td>
        <td><%= (cart_item.price * 1.1).floor %>円</td>
        <td><%= cart_item.amount %></td>
        <td><%= (cart_item.price * 1.1).floor*cart_item.amount %></td>
        <td></td>
        <%= @合計金額+= (cart_item.price * 1.1).floor * cart_item.amount 
      </tr>
    <% end %>
    </tbody>
  </table>

