<p id="notice"></p>
<h4>注文一覧画面</h4>
<table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>宛名</th>
        <th>注文商品</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.name %>
        </td>
        <td>
          <% order.order_lists.each do |order_list| %>
           <%= order_list.item.name %>
           <%= order_list.amount %> 個
          <% end %>
        </td>
        <td>
          <%= link_to order_path(order.id) do %>
           <%= "注文詳細" %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>