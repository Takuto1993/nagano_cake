 <p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class='col-md-8'>
    <table class='table table-inverse'>
      <thead>
        <h4>注文情報確認画面</h4>
        <p id="notice"></p>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
      <% @sum = 0 %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <% if cart_item.item.image.attached? %>
             <%= image_tag cart_item.item.image,size: "50x50" %>
            <% else %>
             <%= image_tag 'no_image', size: "50x50" %>
            <% end %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price %>円</td>
          <td><%= cart_item.amount %> 個</td>
          <td><%= cart_item.subtotal %>円</td>
          <% @sum += cart_item.subtotal %>
        </tr>
      <% end %>
      </tbody>
      <div class="col-md-3">
        <table class='table table-inverse'>
          <tboody>
            <tr>
              <td><h5>支払方法</h5></td>
              <td><%= @order.payment_method_i18n %></td>
              <td colspan="2"></td>
            </tr>
            <tr>
              <td><h5>お届け先</h5></td>
              <td>
                〒<%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
          </tbody>
        </table>
        <%= link_to new_order_path, class: "btn btn-primary" do %>
         <%= "注文情報入力画面に戻る" %>
        <% end %>
      </div>
   <div class="col-md-3">
    <table class='table table-inverse'>
      <tboody>
        <h4>　</h4>
        <p id="notice"></p>
          <tr>
            <td>送料</td>
            <td><%= @shipping_fee %>円</td>
            <td colspan="2"></td>
          </tr>
          <tr>
            <td>商品合計金額</td>
            <td><%= @sum %>円</td>
            <td colspan="2"></td>
          </tr>
          <% @total_payment = @sum + @shipping_fee %>
          <tr>
            <td>請求金額</td>
            <td><%= @total_payment %>円</td>
            <td colspan="2"></td>
          </tr>
      </tbody>
    </table>
    <%= form_with model: @order, url: '/public/orders', method: :post do |f| %>
     <%= f.hidden_field :postal_code %>
     <%= f.hidden_field :address %>
     <%= f.hidden_field :name %>
     <%= f.hidden_field :payment_method %>
     <%= f.hidden_field :total_payment %>
     <%= f.submit "注文を確定する", class:"btn btn-success" %>
    <% end %>
   </div>
  </div>
 </div>

