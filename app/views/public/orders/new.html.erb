<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
   <h4>注文情報入力</h4>
    <%= form_with model: @order, url: confirm_orders_path do |f| %>
     <h4>支払方法</h4>
     <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
     <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

     <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
     <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

     <h4>お届け先</h4>
     <%= f.radio_button :select_address, "0" %>
     <%= f.label :select_address, "ご自身の住所" %><br>
     <%= current_customer.main_address_display %><br>

     <%= f.radio_button :select_address, "1" %>
     <%= f.label :select_address, "登録済住所から選択" %><br>
     <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %><br>

     <%= f.radio_button :select_address, "2" %>
     <%= f.label :select_address, "新しいお届け先" %><br>
     <%= "郵便番号" %><br>
     <%= f.text_field :postal_code %><br>
     <%= "住所" %><br>
     <%= f.text_field :address %> <br>
     <%= "宛名" %><br>
     <%= f.text_field :name %><br><br>

     <%= link_to "カートへ戻る", '/cart_items', class:"btn btn-success" %>
     <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
    <% end %>
  </div>
 </div>
</div>