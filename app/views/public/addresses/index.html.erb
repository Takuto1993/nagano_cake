<p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class='col-md-8'>
      <table class='table table-hover table-inverse'>
        <h3>配送先一覧</h3>
        <thead>
          <tr>
            <th>宛名</th>
            <th>住所</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.name %></td>
            <td>
                〒<%= address.postal_code %><br>
                <%= address.address %>
            </td>
            <td>
              <%= link_to "編集", edit_address_path(address.id), class: "btn btn-success" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>


    <h3>配送先登録</h3>
    <%= form_with model: @address, url: '/addresses' do |f| %>
    <div class="field">
        <%= f.label :"宛名" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :"郵便番号" %><br />
        <%= f.text_field :postal_code, autocomplete: "postal_code" %>
      </div>

      <div class="field">
        <%= f.label :"住所" %><br />
        <%= f.text_field :address, autocomplete: "address" %>
      </div>

      <div class="actions">
        <%= f.submit "保存" %>
      </div>
      <br>
      <%= link_to 'customers/mypage', class: "btn btn-primary" do %>
       <%= "マイページへ戻る" %>
      <% end %>
    </div>
  </div>
 </div>
<% end %>