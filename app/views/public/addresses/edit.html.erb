<h3>配送先編集</h3>
<%= form_with model: @address, url: public_addresses_path(@address.id), method: :patch do |f| %>
<div class="field">
    <%= f.label :"宛名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号" %><br />
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :"住所" %><br />
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="actions">
    <%= f.submit "保存" %>
  </div>
<% end %>

<%= link_to "削除", public_addresses_path(@address.id), method: :delete, "data-confirm" => "本当に削除しますか？" %><br>
<%= link_to "配送先一覧", '/addresses' %>