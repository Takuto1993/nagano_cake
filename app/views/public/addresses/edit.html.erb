<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3>配送先編集</h3>
    <%= form_with model: @address, url: addresses_path(@address.id), method: :patch do |f| %>
    <div class="field">
        <%= f.label :"宛名" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
    
      <div class="field">
        <%= f.label :"郵便番号" %><br />
        <%= f.text_field :postal_code, autocomplete: "postal_code" %>
      </div>
    
      <div class="field">
        <%= f.label :"住所" %><br />
        <%= f.text_field :address, autocomplete: "address" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "保存", class: "btn btn-success" %>
      </div>
    <% end %>
    <br>
    <%= link_to "削除", addresses_path(@address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
    <%= link_to "配送先一覧へ", '/addresses', class: "btn btn-primary" %>
  </div>
 </div>
</div>