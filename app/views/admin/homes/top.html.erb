<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
    <h4>管理者トップ画面</h4>
    <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>注文一覧</th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              注文日<br>
              <%= order.created_at.strftime('%Y/%m/%d') %><br>
              受取人：<%= order.name %>
            </td>
            <td>
              <% @sum = 0 %>
              <% order.order_lists.each do |order_list| %>
                <% if order_list.item.image.attached? %>
                 <%= image_tag order_list.item.image,size: "100x100" %>
                <% else %>
                 <%= image_tag 'no_image', size: "100x100" %>
                <% end %>
               <%= order_list.item.name %><br>
               <% @price = order_list.item.with_tax_price * order_list.amount %>
               商品単価：<%= order_list.item.with_tax_price.to_s(:delimited) %>円　注文個数：<%= order_list.amount %> 個　小計：<%= @price.to_s(:delimited) %>円<br><br>
               <% @sum += @price %>
              <% end %>
            </td>
            <td>
              送料:<%= order.shipping_fee.to_s(:delimited) %>円<br>
              商品合計金額：<%= @sum.to_s(:delimited) %>円<br>
              請求金額：<%= order.total_payment.to_s(:delimited) %>円<br>
              注文ステータス : <%= order.status %><br>
              <%= link_to admin_order_path(order.id), class:"btn btn-primary" do %>
               <%= "注文詳細" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
 </div>
</div>