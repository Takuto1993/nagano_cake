<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
    <h3>ジャンル管理画面</h3>

    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル一覧</th>
            <th></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to genre.name, edit_admin_genre_path(genre.id) %></td>
            <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>


    <h4>商品ジャンル登録</h4>
    <%= form_with model: @genre, url: '/admin/genres' do |f| %>
    　<h5>ジャンル名</h5>
    　<%= f.text_field :name %>
     <%= f.submit 'ジャンル名登録' %>
    <% end %>
  </div>
 </div>
</div>