<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
    <h3>ジャンル編集画面</h3>

    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>

      <h4>ジャンル名</h4>
      <%= f.text_field :name %>

      <%= f.submit 'ジャンル名変更' %>

    <% end %>
  </div>
 </div>
</div>