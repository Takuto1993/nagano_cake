<p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class='col-md-8'>
    <table class='table table-inverse'>
      <thead>
        <h4>注文情報詳細画面</h4>
        <p id="notice"></p>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th colspan="5"></th>
        </tr>
      </thead>
      <tbody>
      <% @sum = 0 %>
      <% @order_lists.each do |order_list| %>
        <tr>
          <td>
            <% if order_list.item.image.attached? %>
             <%= image_tag order_list.item.image,size: "100x100" %>
            <% else %>
             <%= image_tag 'no_image', size: "100x100" %>
            <% end %>
            <%= order_list.item.name %>
          </td>
          <td><%= order_list.item.with_tax_price.to_s(:delimited) %>円</td>
          <td><%= order_list.amount %> 個</td>
          <% @price = order_list.item.with_tax_price * order_list.amount %>
          <td><%= @price.to_s(:delimited) %>円</td>
          <% @sum += @price %>
          <td>
            <%= form_with model: @order_list, url: admin_order_list_path(@order_list.id), method: :patch do |f| %>
             <%= f.select :making_status, OrderList.making_statuses.keys %>
             <%= f.submit "更新", class:"btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
      <div class="col-md-3">
        <table class='table table-inverse'>
          <tboody>
            <tr>
              <td><h5>受取人</h5></td>
              <td><%= @orders.name %></td>
            </tr>
            <tr>
              <td><h5>注文日時</h5></td>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <td><h5>支払方法</h5></td>
              <td><%= @order.payment_method_i18n %></td>
              <td colspan="2"></td>
            </tr>
            <tr>
              <td><h5>お届け先</h5></td>
              <td>
                〒<%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
          </tbody>
        </table>
        <%= link_to '/admin', class: "btn btn-primary" do %>
         <%= "注文一覧画面に戻る" %>
        <% end %>
      </div>
   <div class="col-md-4">
    <table class='table table-inverse'>
      <tboody>
        <h4></h4>
        <p id="notice"></p>
          <tr>
            <td>送料</td>
            <td><%= @order.shipping_fee.to_s(:delimited) %>円</td>
            <td colspan="2"></td>
          </tr>
          <tr>
            <td>商品合計金額</td>
            <td><%= @sum.to_s(:delimited) %>円</td>
            <td colspan="2"></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td><%= @order.total_payment.to_s(:delimited) %>円</td>
            <td colspan="2"></td>
          </tr>
          <tr>
            <td>受注ステータス</td>
            <td>
              <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
               <%= f.select :status, Order.statuses.keys %>
               <%= f.submit "更新", class:"btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td colspan="2"></td>
          </tr>
      </tbody>
    </table>
   </div>
  </div>
 </div>