<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
    <h3>顧客一覧</h3>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>顧客名</th>
            <th>顧客名（カナ）</th>
            <th>退会ステータス</th>
            <th></th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %>
                <%= customer.first_name %>
              <% end %>
            </td>
            <td>
              <%= customer.last_name_kana %>
              <%= customer.first_name_kana %>
            </td>
            <td>
              <%= customer.is_active ? '退会' : '' %>
            </td>
            <td>
              <%= link_to edit_admin_customer_path(customer.id) do %>
               <%= "顧客情報編集" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
 </div>
</div>

