<h3>顧客一覧</h3>

  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>顧客名</th>
        <th>顧客名（カナ）</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td>
            <%= customer.last_name %>
            <%= customer.first_name %>
        </td>
        <td>
          <%= customer.last_name_kana %>
          <%= customer.first_name_kana %>
        </td>
        <td>
          <%= "退会ステータス（未搭載）" %>
          <%= link_to admin_customer_path(customer.id) do %>
           <%= "顧客情報編集" %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>


