<h3>顧客一覧</h3>
<% @customers.each do |customer| %>

  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>顧客名</th>
        <th>顧客名（カナ）</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %>
            <%= customer.first_name %>
          <% end %>
        </td>
        <td>
          <%= customer.last_name_kana %>
          <%= customer.first_name_kana %>
        </td>
        <td>
          <%= "退会ステータス（搭載予定）" %>
        </td>
      </tr>
    </tbody>
  </table>

<% end %>
