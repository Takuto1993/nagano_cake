<h3>顧客一覧</h3>
<% @customers.each do |customer| %>

  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>顧客名</th>
        <th>顧客名（カナ）</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= customer.last_name %>
          <%= customer.first_name %>
        </td>
        <td>
          <%= customer.last_name_kana %>
          <%= customer.first_name_kana %>
        </td>
        <td>
          <%= link_to "詳細", public_customer_path
        </td>
      </tr>
    </tbody>
  </table>

<% end %>
