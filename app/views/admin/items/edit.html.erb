<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
   <h3>商品編集画面</h3>
   
   <% if @item.errors.any? %>
      <%= @item.errors.count %>件のエラーが発生しました
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
   
   <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
       <h4>商品画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
       <h4>商品名</h4>
        <%= f.text_field :name %>
       <h4>商品説明文</h4>
        <%= f.text_area :introduction %>
       <h4>税抜き価格</h4>
        <p><%= f.text_field :price %>円</p>
       <%= f.submit '商品編集完了'%>
   <% end %>
  </div>
 </div>
</div>